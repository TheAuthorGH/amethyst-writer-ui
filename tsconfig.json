{
  "compilerOptions": {
    "rootDirs": [ "./src", "./tests" ],
    "target": "es2019",
    "moduleResolution": "node",
    "strict": true,
    "module": "commonjs",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "paths": {
      "@src/*": [ "./src/*" ],
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./tests",
    "./dist"
  ],
}
